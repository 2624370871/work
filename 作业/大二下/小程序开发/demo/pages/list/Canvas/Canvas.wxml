<!--pages/list/Canvas/Canvas.wxml-->
<view class="box">
  <view class="title">
    基本绘画
  </view>
    <canvas canvas-id="myCanvas"></canvas>
  <view class="btn">
    <button type="primary" style="width: 200rpx;height: 100rpx;" bindtap="clear">清除</button>
    <button type="primary" style="width: 200rpx;height: 100rpx;" bindtap="drawDot">画点</button>
    <button type="primary" style="width: 200rpx;height: 100rpx;" bindtap="drawCircle">画圆</button>
  </view>
  <view class="btn">
    <button type="primary" style="width: 200rpx;height: 100rpx;" bindtap="drawDash">画虚线</button>
    <button type="primary" style="width: 200rpx;height: 100rpx;" bindtap="capAndJoin">端点交点</button>
    <button type="primary" style="width: 200rpx;height: 100rpx;" bindtap="drawText">画字</button>
  </view>
  <view class="btn">
    <button type="primary" style="width: 200rpx;height: 100rpx;" bindtap="circularGrad">圆形渐变</button>
    <button type="primary" style="width: 200rpx;height: 100rpx;" bindtap="shadowRect">阴影矩形</button>
    <button type="primary" style="width: 200rpx;height: 100rpx;" bindtap="tranSlucent">半透明</button>
  </view>
</view>
