<!--pages/list/File/File.wxml-->
<view class="box">
  <view class="title">
    文件操作
  </view>
  <image src="{{imgPath}}" style="width:280px"></image>
  <view class="btn">
    <button type="primary" bindtap="openFile">打开文件</button>
    <button type="primary" bindtap="saveFile">保存文件</button>
  </view>
  <view class="btn">
    <button type="primary" bindtap="getSaveFileInfo">文件信息</button>
    <button type="primary" bindtap="removedSaveFile">删除文件</button>
  </view>
  <view class="fileInfo" hidden="{{hidden}}">
    <text>{{msg}}</text>
  </view>
</view>