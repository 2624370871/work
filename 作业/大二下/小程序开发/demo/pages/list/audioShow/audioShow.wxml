<!--pages/list/audioShow/audioShow.wxml-->
<view class="box">
  <view class="title">
    音频展示
  </view>
  <audio poster="{{poster}}" name="{{name}}" author="{{author}}" src="{{src}}" id="audio" controls loop></audio>
  <button bindtap="audioPlay">播放</button>
<button bindtap="audioPause">暂停</button>
<button bindtap="audio14">设置当前播放时间为14秒</button>
<button bindtap="audioStart">回到开头</button>
</view>
