<!--pages/list/exchange/exchange.wxml-->
<view class="box">
  <view class="title">
    货币兑换
  </view>
  <form bindsubmit="calc" bindreset="reset">
    <input type="number" name="ipt" placeholder="请输入人民币金额"/>
  <view class="button">
  <button type="primary" style="width: 100px;" form-type="submit">计算</button>
  <button type="primary" style="width: 100px;"  form-type="reset">清除</button>
  </view>
  <view class="out">
    <view>兑换美元为：{{M}}</view>
  <view>兑换英镑为：{{Y}}</view>
  <view>兑换港币为：{{G}}</view>
  <view>兑换欧元为：{{O}}</view>
  <view>兑换韩元为：{{H}}</view>
  <view>兑换日元为：{{R}}</view>
  </view>
  </form>
</view>
