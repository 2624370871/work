        ohos:height="50vp"
        ohos:width="50vp"
        ohos:text="btn1"
        ohos:background_element="$graphic:color_blue_element"
        ohos:layout_alignment="top"/>
    <Button
        ohos:height="50vp"
        ohos:width="50vp"
        ohos:text="btn1"
        ohos:background_element="$graphic:color_blue_element"
        ohos:layout_alignment="vertical_center"/>
    <Button
        ohos:height="50vp"
        ohos:width="50vp"
        ohos:text="btn1"
        ohos:background_element="$graphic:color_blue_element"
