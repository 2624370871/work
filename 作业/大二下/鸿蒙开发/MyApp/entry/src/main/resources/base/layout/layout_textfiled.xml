<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <!--账号-->
    <DirectionalLayout
        ohos:height="100vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <Text
            ohos:height="match_parent"
            ohos:weight="1"
            ohos:width="0vp"
            ohos:text="账号"
            ohos:text_size="25fp"
            ohos:background_element="#00FF00"/>
        <StackLayout
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="3"
            ohos:background_element="#0000FF">
            <TextField
                ohos:id="$+id:tf1"
                ohos:height="match_parent"
                ohos:text_size="25fp"
                ohos:weight="3"
                ohos:width="match_parent"/>
            <Text
                ohos:id="$+id:text1"
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:visibility="hide"
                ohos:text="账号输入错误"
                ohos:text_size="25fp"
                ohos:text_alignment="right|vertical_center"
                ohos:text_color="red"/>
        </StackLayout>
    </DirectionalLayout>
    <!--密码-->
    <DirectionalLayout
        ohos:height="100vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:top_margin="20vp">
        <Text
            ohos:height="match_parent"
            ohos:weight="1"
            ohos:width="0vp"
            ohos:text="密码"
            ohos:text_size="25fp"
            ohos:background_element="#00FF00"/>
        <StackLayout
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="3"
            ohos:background_element="#0000FF">
            <TextField
                ohos:id="$+id:tf2"
                ohos:height="match_parent"
                ohos:text_size="25fp"
                ohos:weight="3"
                ohos:width="match_parent"/>
            <Text
                ohos:id="$+id:text2"
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:visibility="hide"
                ohos:text="密码输入错误"
                ohos:text_size="25fp"
                ohos:text_alignment="right|vertical_center"
                ohos:text_color="red"/>
        </StackLayout>

    </DirectionalLayout>

    <!--  按钮  -->
    <Button
        ohos:id="$+id:btn"
        ohos:height="100vp"
        ohos:width="200vp"
        ohos:text="登录"
        ohos:layout_alignment="center"
        ohos:top_margin="40vp"
        ohos:text_size="30fp"
        ohos:background_element="$graphic:button2"
        />

</DirectionalLayout>