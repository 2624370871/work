<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

 <Button
     ohos:height="100vp"
     ohos:width="match_content"
     ohos:text="弹出toast"
     ohos:text_size="30fp"
     ohos:id="$+id:btn"></Button>

 <Button
     ohos:height="match_content"
     ohos:width="match_content"
     ohos:text="弹出popup"
     ohos:text_size="30fp"
     ohos:background_element="#1e90f2"
     ohos:id="$+id:btn1"></Button>
</DirectionalLayout>