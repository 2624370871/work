<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Button
        ohos:height="120vp"
        ohos:width="200vp"
        ohos:left_margin="13vp"
        ohos:text="Button 1"
        ohos:text_size="30vp"/>

    <Button
        ohos:height="120vp"
        ohos:width="200vp"
        ohos:background_element="$graphic:color_blue_element"
        ohos:left_margin="13vp"
        ohos:text="Button 2"
        ohos:text_size="30vp"/>

    <Button
        ohos:height="120vp"
        ohos:width="200vp"
        ohos:background_element="$graphic:color_blue_element"
        ohos:left_margin="13vp"
        ohos:text="Button 3"
        ohos:text_size="30vp"/>

</DirectionalLayout>