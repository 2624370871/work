<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
       <Image
           ohos:height="60vp"
           ohos:width="30vp"
           ohos:background_element="#35A9D0"
           ohos:image_src="$media:back"
           ohos:id="$+id:back">
       </Image>
        <Text
            ohos:height="60vp"
            ohos:width="match_parent"
            ohos:text_color="#ffffff"
            ohos:text="点餐系统"
            ohos:text_alignment="center"
            ohos:background_element="#35A9D0"
            ohos:text_size="30fp">
        </Text>
    </DirectionalLayout>
    <Text
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:layout_alignment="top"
        ohos:text="餐桌号:A03"
        ohos:text_color="#ffffff"
        ohos:background_element="#35A9D0"
        ohos:text_size="20fp">
    </Text>
    <DirectionalLayout
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <TextField
            ohos:left_margin="5vp"
            ohos:left_padding="10fp"
            ohos:height="40vp"
            ohos:width="200vp"
            ohos:hint="请输入菜名"
            ohos:text_alignment="vertical_center"
            ohos:text_size="16fp"
            ohos:background_element="$graphic:background_search">
        </TextField>
        <Image
            ohos:height="40vp"
            ohos:width="60vp"
            ohos:image_src="$media:search">
        </Image>
        <Button
            ohos:top_margin="2vp"
            ohos:height="38vp"
            ohos:width="150vp"
            ohos:text="菜品类目"
            ohos:background_element="$graphic:background_button"
            ohos:text_size="20fp"></Button>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="#ffffff"
        ohos:orientation="horizontal">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="1.5"
            ohos:orientation="vertical">
            <Button
                ohos:height="40vp"
                ohos:width="match_content"
                ohos:id="$+id:subject_name"
                ohos:text="菜品"
                ohos:layout_alignment="center"
                ohos:text_size="20fp"
                ohos:text_color="#8b8b7a"
                />
        </DirectionalLayout>
        <!--间隔线-->
        <Image
            ohos:height="30vp"
            ohos:width="1vp"
            ohos:top_margin="5vp"
            ohos:background_element="#cfcfcf"/>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="1.5"
            ohos:orientation="vertical">
            <Button
                ohos:height="40vp"
                ohos:width="match_content"
                ohos:id="$+id:grade"
                ohos:layout_alignment="horizontal_center"
                ohos:text="价格"
                ohos:text_size="20fp"
                ohos:text_color="#8b8b7a"
                />
        </DirectionalLayout>
    </DirectionalLayout>


    <Image
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#cfcfcf"/>

    <DirectionalLayout
        ohos:height="0vp"
        ohos:weight="1"
        ohos:width="match_parent">
        <DirectionalLayout
            ohos:height="100vp"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <Text
                ohos:height="100vp"
                ohos:width="100vp"
                ohos:text="拍黄瓜"
                ohos:text_size="30fp"
                ohos:right_margin="120vp"
                ohos:left_margin="50vp"
                ohos:id="$+id:food1"></Text>
            <Text
                ohos:id="$+id:phg"
                ohos:height="100vp"
                ohos:width="100vp"
                ohos:text="15.0"
                ohos:text_size="30fp"></Text>
            <Image
                ohos:id="$+id:add"
                ohos:height="100vp"
                ohos:width="50vp"
                ohos:image_src="$media:add"></Image>
        </DirectionalLayout>
        <Image
            ohos:height="1vp"
            ohos:width="match_parent"
            ohos:background_element="#cfcfcf"/>
        <DirectionalLayout
            ohos:height="100vp"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <Text
                ohos:height="100vp"
                ohos:width="100vp"
                ohos:text="蛋炒饭"
                ohos:text_size="30fp"
                ohos:right_margin="120vp"
                ohos:left_margin="50vp"></Text>
            <Text
                ohos:height="100vp"
                ohos:width="100vp"
                ohos:text="18.0"
                ohos:text_size="30fp"></Text>
            <Image
                ohos:height="100vp"
                ohos:width="50vp"
                ohos:image_src="$media:add"></Image>
        </DirectionalLayout>
        <Image
            ohos:height="1vp"
            ohos:width="match_parent"
            ohos:background_element="#cfcfcf"/>

        <DirectionalLayout
            ohos:height="100vp"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <Text
                ohos:height="100vp"
                ohos:width="100vp"
                ohos:text="卤鸡腿"
                ohos:text_size="30fp"
                ohos:right_margin="120vp"
                ohos:left_margin="50vp"></Text>
            <Text
                ohos:height="100vp"
                ohos:width="100vp"
                ohos:text="8.0"
                ohos:text_size="30fp"></Text>
            <Image
                ohos:height="100vp"
                ohos:width="50vp"
                ohos:image_src="$media:add"></Image>
        </DirectionalLayout>
        <Image
            ohos:height="1vp"
            ohos:width="match_parent"
            ohos:background_element="#cfcfcf"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:id="$+id:check_order"
        ohos:height="100vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:background_element="black"
        >

        <Text
            ohos:height="60vp"
            ohos:width="40vp"
            ohos:text="￥"
            ohos:text_size="15fp"
            ohos:layout_alignment="vertical_center"
            ohos:left_margin="20vp"
            ohos:text_color="#ffffff"/>


        <Text
            ohos:height="80vp"
            ohos:width="100vp"
            ohos:id="$+id:price"
            ohos:text="0.0"
            ohos:text_color="#ffffff"
            ohos:layout_alignment="vertical_center"
            ohos:text_size="26fp"
            />

        <Button
            ohos:id="$+id:pay"
            ohos:height="match_parent"
            ohos:width="150vp"
            ohos:text="提交订单"
            ohos:text_color="black"
            ohos:text_size="23fp"
            ohos:text_alignment="center"
            ohos:left_margin="122vp"
            ohos:background_element="#35a9d0"/>

    </DirectionalLayout>
</DirectionalLayout>