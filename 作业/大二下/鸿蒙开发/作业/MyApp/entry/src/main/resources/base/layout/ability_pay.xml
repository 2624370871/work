<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="bottom||center">
    <DirectionalLayout
        ohos:height="51vp"
        ohos:width="match_parent"
        ohos:background_element="#35a9d0"
        ohos:orientation="horizontal">
        <Image
            ohos:id="$+id:back"
            ohos:height="30vp"
            ohos:width="0vp"
            ohos:weight="0.5"
            ohos:top_margin="10vp"
            ohos:scale_mode="inside"
            ohos:left_margin="10vp"
            ohos:image_src="$media:back"/>
        <DirectionalLayout
            ohos:height="50vp"
            ohos:width="0vp"
            ohos:weight="5"
            ohos:orientation="vertical">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:layout_alignment="center"
                ohos:text="我的订单"
                ohos:text_size="22fp"
                ohos:text_color="#ffffff"
                ohos:top_margin="12vp"/>
        </DirectionalLayout>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:background_element="#35a9d0">
        <Text
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text="订单号：666"
            ohos:text_size="18fp"
            ohos:text_color="#ffffff"
            ohos:text_alignment="center"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:background_element="#35a9d0">
        <Text
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text="餐桌号：1"
            ohos:text_size="25fp"
            ohos:text_color="#ffffff"
            ohos:text_alignment="center"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="30vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:background_element="#35a9d0">
        <Text
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text="创建订单时间：2023"
            ohos:text_size="14fp"
            ohos:text_color="#ffffff"
            ohos:left_padding="15vp"/>
    </DirectionalLayout>

    <Image
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#cfcfcf"/>

    <DirectionalLayout
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <Text
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1.5"
            ohos:text_size="18fp"
            ohos:text="菜品"
            ohos:text_alignment="center"/>
        <Text
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text_size="18fp"
            ohos:text="单价"
            ohos:text_alignment="center"/>
        <Text
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text_size="18fp"
            ohos:text="数量"
            ohos:text_alignment="center"/>
        <Text
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text_size="18fp"
            ohos:text="小计"
            ohos:text_alignment="center"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:top_margin="30vp"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:bottom_margin="350vp">
        <Text
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1.5"
            ohos:text_size="25fp"
            ohos:text="拍黄瓜"
            ohos:text_alignment="center"/>
        <Text
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text_size="25fp"
            ohos:text="15"
            ohos:text_alignment="center"/>
        <Text
            ohos:id="$+id:i"
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text_size="25fp"
            ohos:text=""
            ohos:text_alignment="center"/>
        <Text
            ohos:id="$+id:count"
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text_size="25fp"
            ohos:text=""
            ohos:text_alignment="center"/>
    </DirectionalLayout>

    <Image
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#cfcfcf"/>
    <DirectionalLayout
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:background_element="#35a9d0">

        <Text
            ohos:left_margin="30vp"
            ohos:height="match_parent"
            ohos:width="100vp"
            ohos:text="总价："
            ohos:text_size="30fp"
            ohos:text_color="black"
            ohos:text_alignment="center"
            />
        <Text
            ohos:height="match_parent"
            ohos:width="200vp"
            ohos:id="$+id:allprice"
            ohos:text_color="black"
            ohos:text_size="30fp"
            ohos:text_alignment="vertical_center"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <Button
            ohos:id="$+id:success"
            ohos:margin="20vp"
            ohos:height="80vp"
            ohos:width="0"
            ohos:weight="1"
            ohos:text_size="30fp"
            ohos:text="支付订单"
            ohos:background_element="$graphic:background_button">
        </Button>
        <Button
            ohos:id="$+id:go"
            ohos:margin="20vp"
            ohos:height="80vp"
            ohos:width="0"
            ohos:weight="1"
            ohos:text_size="30fp"
            ohos:text="接着点菜"
            ohos:background_element="$graphic:background_button"></Button>
    </DirectionalLayout>

</DirectionalLayout>