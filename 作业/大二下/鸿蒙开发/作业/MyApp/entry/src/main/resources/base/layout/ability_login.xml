<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center||top"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:text_helloworld"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_ability_login"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="100vp"
        ohos:bottom_margin="10vp"
        ohos:text="欢迎光临"
        ohos:text_size="40vp"
        ohos:text_color="#35A9D0"
        />

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="horizontal"
        ohos:alignment="center"
        ohos:layout_alignment="center"
        ohos:bottom_margin="10vp">
        <Image
            ohos:height="50vp"
            ohos:width="50vp"
            ohos:image_src="$media:my"></Image>
        <TextField
            ohos:height="50vp"
            ohos:width="250vp"
            ohos:background_element="$graphic:background_text_field"
            ohos:hint="请输入手机号"
            ohos:layout_alignment="center"
            ohos:text_size="30fp"
            ohos:id="$+id:phone"></TextField>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="horizontal"
        ohos:alignment="center"
        ohos:layout_alignment="center">
        <Image
            ohos:height="50vp"
            ohos:width="50vp"
            ohos:image_src="$media:pwd"></Image>
        <TextField
            ohos:height="50vp"
            ohos:width="250vp"
            ohos:background_element="$graphic:background_text_field"
            ohos:hint="请输入密码"
            ohos:layout_alignment="center"
            ohos:text_size="30fp"
            ohos:id="$+id:pwd"></TextField>
    </DirectionalLayout>

    <Button
        ohos:id="$+id:reset"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="忘记密码"
        ohos:text_size="15fp"
        ohos:layout_alignment="right"
        ohos:right_margin="80vp"
        ohos:top_margin="10vp"></Button>
    <Button
        ohos:id="$+id:login"
        ohos:height="50vp"
        ohos:width="290vp"
        ohos:left_margin="7vp"
        ohos:background_element="#35A9D0"
        ohos:text="登录"
        ohos:text_size="30fp"
        ohos:layout_alignment="center"
        ohos:bottom_margin="10vp"
        ohos:top_margin="30vp"
        ohos:text_color="#ffffff">
    </Button>
    <Button
        ohos:id="$+id:register"
        ohos:height="50vp"
        ohos:width="290vp"
        ohos:left_margin="7vp"
        ohos:text="注册"
        ohos:text_size="30fp"
        ohos:layout_alignment="center"
        ohos:text_color="#35A9D0">
    </Button>
</DirectionalLayout>