<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:alignment="bottom">
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        >
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <Text
                ohos:height="80vp"
                ohos:weight="1"
                ohos:width="0vp"
                ohos:text="顾客:"
                ohos:background_element="#35A9D0"
                ohos:text_size="30fp">
            </Text>
            <Text
                ohos:id="$+id:user"
                ohos:height="80vp"
                ohos:weight="4"
                ohos:width="0vp"
                ohos:text=""
                ohos:background_element="#35A9D0"
                ohos:text_size="30fp">
            </Text>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="vertical"
            ohos:alignment="center"
            ohos:layout_alignment="center"
            >
            <Button
                ohos:id="$+id:scan"
                ohos:height="150vp"
                ohos:width="300vp"
                ohos:background_element="$graphic:background_button"
                ohos:text="扫码点餐"
                ohos:text_color="#ffffff"
                ohos:text_size="50fp"
                ohos:top_margin="100vp"
                ohos:bottom_margin="25vp">
            </Button>
            <Button
                ohos:id="$+id:order"
                ohos:height="150vp"
                ohos:width="300vp"
                ohos:background_element="$graphic:background_button"
                ohos:text="预约餐桌"
                ohos:text_color="#ffffff"
                ohos:text_size="50fp"
                ohos:top_margin="25vp"
                ohos:bottom_margin="200vp">
            </Button>
        </DirectionalLayout>
        <TabList
            ohos:id="$+id:tabList"
            ohos:height="80vp"
            ohos:width="match_parent"
            ohos:layout_alignment="vertical_center"
            ohos:background_element="#35A9D0"
            ohos:normal_text_color="#ffffff"
            ohos:selected_text_color="#0066ff"
            ohos:selected_tab_indicator_color="#ffffff"
            ohos:selected_tab_indicator_height="2vp"
            ohos:text_alignment="center"
            ohos:text_size="30fp"
            ohos:orientation="horizontal">
        </TabList>
    </DirectionalLayout>


</DirectionalLayout>