<view><view class="smart-page-head"><view class="smart-page-head-title">progress,进度</view><view class="smart-padding-wrap"><view class="progress-box"><progress percent="{{percent}}" show-info="{{true}}" stroke-width="3" color="red"></progress></view><view class="progress-control"><button type="primary" disabled="{{!canadd}}" data-event-opts="{{[['tap',[['add',['$event']]]]]}}" bindtap="__e">增加进度</button><button type="warn" disabled="{{!candel}}" data-event-opts="{{[['tap',[['del',['$event']]]]]}}" bindtap="__e">减少进度</button></view><view class="progress-box"><progress percent="{{pgLists[0]}}" show-info="{{true}}" stroke-width="3" active="true"></progress></view><view class="progress-box"><progress percent="{{pgLists[1]}}" show-info="{{true}}" stroke-width="3" activeColor="#10AEFF"></progress></view><view class="progress-control"><button type="primary" disabled="{{!canadd1}}" data-event-opts="{{[['tap',[['setProgress',['$event']]]]]}}" bindtap="__e">设置进度</button><button type="warn" disabled="{{!candel1}}" data-event-opts="{{[['tap',[['clearProgress',['$event']]]]]}}" bindtap="__e">清除进度</button></view></view></view></view>